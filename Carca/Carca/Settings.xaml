                                </StackLayout>
                            </Frame>
                            <Frame CornerRadius="15" IsClippedToBounds="True" Grid.Row="0" Grid.Column="1" HasShadow="True" BackgroundColor="White" Padding="0">
                                <StackLayout>
                                    <Label  Text="&#xf111;" 
                                            FontFamily="{StaticResource FontAwesomeSolid}" 
                                            FontSize="45" 
                                            TextColor="#1c0c65"
                                            HorizontalOptions="Center"
                                            Margin="0,35,0,0"
                                            />
                                    <Label  Text="&#xf007;" 
                                            FontFamily="{StaticResource FontAwesomeSolid}" 
                                            FontSize="30" 
                                            TextColor="White"
                                            HorizontalOptions="Center"
                                            Margin="0,-45,0,0"
                                            />
                                  
                                    <Label Text="Profile" HorizontalOptions="Center" TextColor="#1c0c65" FontAttributes="Bold"></Label>
                                </StackLayout>
                            </Frame>
                            <Frame CornerRadius="15" IsClippedToBounds="True" Grid.Row="1" Grid.Column="0" HasShadow="True" BackgroundColor="White" Padding="0">
