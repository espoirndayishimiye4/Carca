                                    <Label  Text="&#xf111;" 
                                            FontFamily="{StaticResource FontAwesomeSolid}" 
                                            FontSize="45" 
                                            TextColor="#1c0c65"
                                            HorizontalOptions="Center"
                                            Margin="0,35,0,0"
                                            />
                                    <Label  Text="&#xf0f3;" 
                                            FontFamily="{StaticResource FontAwesomeRegular}" 
                                            FontSize="30" 
                                            TextColor="White"
                                            HorizontalOptions="Center"
                                            Margin="0,-45,0,0"
                                            />
                                    
                                    <Label Text="Notification" HorizontalOptions="Center" TextColor="#1c0c65" FontAttributes="Bold"></Label>
                                </StackLayout>
                            </Frame>
                            <Frame CornerRadius="15" IsClippedToBounds="True" Grid.Row="1" Grid.Column="1" HasShadow="True" BackgroundColor="White" Padding="0">
