                                <RowDefinition Height="110"></RowDefinition>
                                <RowDefinition Height="110"></RowDefinition>
                                <RowDefinition Height="110"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".5*"></ColumnDefinition>
                                <ColumnDefinition Width=".5*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Frame CornerRadius="15" IsClippedToBounds="True" Grid.Row="0" Grid.Column="0" HasShadow="True" BackgroundColor="White" Padding="0">
                                <StackLayout>
                                    <Label  Text="&#xf111;" 
                                            FontFamily="{StaticResource FontAwesomeSolid}" 
                                            FontSize="45" 
                                            TextColor="#1c0c65"
                                            HorizontalOptions="Center"
                                            Margin="0,35,0,0"
                                            />
                                    <Label  Text="&#xf155;" 
                                            FontFamily="{StaticResource FontAwesomeSolid}" 
                                            FontSize="35" 
                                            TextColor="White"
                                            HorizontalOptions="Center"
                                            Margin="0,-45,0,0"
                                            />
